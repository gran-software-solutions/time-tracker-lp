        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());
        gtag('config', 'G-RJB0Z11MPP');

        const converters = document.querySelectorAll('.convert');
        converters.forEach(el => {
            el.addEventListener('click', it => {
                let url = it.target.href
                var callback = function () {
                    if (typeof (url) != 'undefined') {
                        window.location = url;
                    }
                };

                gtag('event', 'conversion', {
                    'send_to': 'AW-11039123167/E1YkCPPM_4AaEN_N7o8p',
                    'event_callback': callback
                });

                return false;
            });
        });
    </script>

    <style type="text/css">
        #ribbon::after {
            background: #fff9ef;
            content: "";
            height: 45%;
            left: 0;
            position: absolute;
            top: 85%;
            transform: skewY(10deg);
            width: 100%;
            z-index: -1;
        }
    </style>
